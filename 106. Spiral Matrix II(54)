class Solution {
public:
    vector<int> spiralOrder(vector<vector<int>>& matrix) {
        vector<int> v;
        int n = matrix[0].size();
        int m = matrix.size();
        int l=0, r = n-1;
        int t=0, b = m-1;
        int dir = 0;
        while(l <= r && t <= b){
          if(dir == 0){
            for(int i=l;i<=r;i++){
              v.push_back(matrix[t][i]);
            }
            t++;
          }else if(dir == 1){
            for(int i=t;i<=b;i++){
              v.push_back(matrix[i][r]);
            }
            r--;
          }else if(dir == 2){
            for(int i=r;i>=l;i--){
              v.push_back(matrix[b][i]);
            }
            b--;
          }else{
            for(int i=b;i>=t;i--){
              v.push_back(matrix[i][l]);
            }
            l++;
          }
          dir = (dir + 1) % 4;
        }
        return v;
    }
};
