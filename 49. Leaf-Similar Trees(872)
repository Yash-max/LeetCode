class Solution {
public:
    void inorder(TreeNode* root,vector<int> &v){
        if(!root){
            return ;
        }
        inorder(root->left,v);
        if(!root->left && !root->right){
            v.push_back(root->val);
        }
        inorder(root->right,v);
    }
    bool leafSimilar(TreeNode* root1, TreeNode* root2) {
        vector<int> v1,v2;
        inorder(root1,v1);
        inorder(root2,v2);
        int n1=v1.size();
        int n2=v2.size();
        if(n1 != n2){
            return false;
        }
        for(int i=0;i<n1;i++){
            if(v1[i] != v2[i]){
                return false;
            }
        }
        return true;
    }
};
