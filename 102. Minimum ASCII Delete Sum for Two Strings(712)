class Solution {
public:
    int minimumDeleteSum(string s1, string s2) {
        int ans = 0, total = 0;
        int n = s1.length();
        int m = s2.length();
        int dp[n+1][m+1];
        for(int i=0; i < n; i++){
            total += s1[i];
        }
        for(int i=0; i < m; i++){
            total += s2[i];
        }
        for(int i = 0; i <= n ; i++){
            for(int j = 0; j <= m ; j++){
                if(i == 0 || j == 0){
                    dp[i][j] = 0;
                }else if(s1[i-1] == s2[j-1]){
                    int temp = s1[i-1];
                    dp[i][j] = 2 * temp + dp[i-1][j-1];
                }else{
                    dp[i][j] = max(dp[i-1][j],dp[i][j-1]);
                }
            }
        }
        return total - dp[n][m];
    }
};
