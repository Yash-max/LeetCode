class Solution {
public:
    int removeDuplicates(vector<int>& arr) {
        int n = arr.size();
        if (n <= 1){
            return n;
        }
        int len = 0;
        for(int i=0;i<n-1;i++){
            if(arr[i] != arr[i+1]){
                arr[len++]=arr[i];
            }
        }
        arr[len++]=arr[n-1];
        return len;
    }
};
