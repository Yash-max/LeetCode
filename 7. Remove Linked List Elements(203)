class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        if(!head){
            return NULL;
        }else if(head->val != val){
            head->next=removeElements(head->next,val);
            return head;
        }else{
            head->next=removeElements(head->next,val);
            return head->next;
        }
    }
};
