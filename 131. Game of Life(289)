class Solution {
public:
    int neighbour(vector<vector<int>>& board,int i,int j,int n,int m){
        int ans = 0;
        for(int x=i-1;x<=i+1;x++){
            for(int y=j-1;y<=j+1;y++){
                if(x == i && y == j) continue;
                if(x >= 0 && x < n && y >= 0 && y < m && board[x][y] == 1){
                    ans++;
                }
            }
        }
        return ans;
    }
    void gameOfLife(vector<vector<int>>& board) {
        int n = board.size();
        int m = board[0].size();
        vector<vector<int>> temp(board);
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                int x = neighbour(board,i,j,n,m);
                if(board[i][j] == 0 && x == 3){
                    temp[i][j] = 1;
                }else if(board[i][j] == 1 && (x < 2 || x > 3)){
                    temp[i][j] = 0;
                }
            }
        }
        board = temp;
    }
};
