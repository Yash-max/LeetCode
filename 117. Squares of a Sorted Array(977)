class Solution {
public:
    vector<int> sortedSquares(vector<int>& arr) {
        int n = arr.size();
        vector<int> ans(n);
        int i = 0, j = n-1, x = n-1;
        while(i <= j){
            if( abs(arr[i]) > abs(arr[j]) ){
                ans[x--] = (arr[i] * arr[i]);
                i++;
            }else{
                ans[x--] = (arr[j] * arr[j]);
                j--;
            }
        }
        return ans;
    }
};
