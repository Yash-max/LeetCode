class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) {
        int sum = 0,n = mat.size();
        for(int i=0;i<n;i++){
            sum += mat[i][i];
            sum += mat[i][n-i-1];
            if(i == n-1-i){
                sum -= mat[i][i];
            }
        }
        return sum;
    }
};
