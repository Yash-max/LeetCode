class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& matrix) {
        vector<int> v;
        int n = matrix.size();
        if(n == 0){
            return v;
        }
        int m = matrix[0].size();
        if(m == 0){
            return v;
        }
        vector<vector<int>> temp(n+m+1);
        for(int i=0;i<n;i++){
            reverse(matrix[i].begin(),matrix[i].end());
            for(int j=0;j<m;j++){
                temp[m+i-j].push_back(matrix[i][j]);
            }
        }
        int flag = 0;
        for(int i=0;i<temp.size();i++){
            if(flag == 1){
                for(int j = temp[i].size()-1;j>=0;j--){
                    v.push_back(temp[i][j]);
                }
                flag = 0;
            }else{
                for(int j = 0; j < temp[i].size(); j++){
                    v.push_back(temp[i][j]);
                }
                flag = 1;
            }
        }
        return v;
    }
};
