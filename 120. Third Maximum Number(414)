class Solution {
public:
    int thirdMax(vector<int>& arr) {
        int ans = INT_MIN;

        int temp = arr[0];
        for(int i=0;i<arr.size();i++){
            temp = max(temp,arr[i]);
        }
        arr.erase(remove(arr.begin(),arr.end(),temp),arr.end());
        ans = max(ans,temp);
        if(arr.size() == 0){
            return temp;
        }

        temp = arr[0];
        for(int i=0;i<arr.size();i++){
            temp = max(temp,arr[i]);
        }
        arr.erase(remove(arr.begin(),arr.end(),temp),arr.end());
        if(arr.size() == 0){
            return ans;
        }

        temp = arr[0];
        for(int i=0;i<arr.size();i++){
            temp = max(temp,arr[i]);
        }
        return temp;
    }
};
