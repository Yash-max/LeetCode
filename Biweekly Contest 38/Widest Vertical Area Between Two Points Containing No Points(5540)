class Solution {
public:
    int maxWidthOfVerticalArea(vector<vector<int>>& points) {
        int ans=0;
        set<int> s;
        for(int i=0;i<points.size();i++){
            s.insert(points[i][0]);
        }
        auto itr=s.begin();
        int prev=(*itr);
        itr++;
        for(;itr!=s.end();itr++){
            int curr=(*itr);
            ans=max(ans,curr-prev);
            prev=curr;
        }
        return ans;
    }
};
