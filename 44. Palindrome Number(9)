class Solution {
public:
    bool isPalindrome(int x) {
        if(x < 0){return false;}
        long num = x;
        long rev = 0;
        while(num){
            rev = rev * 10 + num % 10;
            num /= 10;
        }
        if(x == rev){
            return true;
        }else{
            return false;
        }
    }
};
