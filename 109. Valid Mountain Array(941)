class Solution {
public:
    bool validMountainArray(vector<int>& arr) {
        int n = arr.size();
        if(n <= 2){return false;}
        int temp = arr[0];
        int i=1;
        while(i<n && arr[i] > arr[i-1]){
            temp = arr[i];
            i++;
        }
        if(i == n || i == 1){return false;}
        while(i < n && arr[i] < arr[i-1]){
            i++;
        }
        if(i != n) return false;
        return true;
    }
};
