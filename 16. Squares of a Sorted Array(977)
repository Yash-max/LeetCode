class Solution {
public:
    vector<int> sortedSquares(vector<int>& arr) {
        vector<int> v;
        int i=0,j=arr.size()-1;
        while(i<=j){
            if(abs(arr[i]) > abs(arr[j])){
                v.push_back(arr[i]*arr[i]);
                i++;
            }else{
                v.push_back(arr[j]*arr[j]);
                j--;
            }
        }
        reverse(v.begin(),v.end());
        return v;
    }
};
