class Solution {
public:
    string getSmallestString(int n, int k) {
        string s;
        if(n == 1){
            char ch = 'a'+k-1;
            s += ch;
            return s;
        }
        for(int i = 0; i < n; i++){
            int t = (n-i-1)*26;
            //cout<<t<<" "<<k<<" ";
            if(t >= k){
                char ch = 'a';
                s += ch;
                k--;
            }else{
                char ch = 'a'+(k-t)-1;
                s += ch;
                k -= (k-t);
            }
        }
        return s;
    }
};
