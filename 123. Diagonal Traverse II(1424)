class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& nums) {
        vector<int> v;
        int n = nums.size();
        int m = 0;
        for(int i=0;i<n;i++){
            int x = nums[i].size();
            m = max(m,x);
        }
        vector < vector < int > > temp(n+m+1);
        for(int i=0;i<n;i++){
            for(int j=0;j<nums[i].size();j++){
                temp[i+j].push_back(nums[i][j]);
            }
        }
        for(int i=0;i<temp.size()-2;i++){
            for(int j=temp[i].size()-1;j>=0;j--){
                v.push_back(temp[i][j]);
            }
        }
        return v;
    }
};
